/**index.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content:space-between;
  box-sizing: border-box;

} 
.page-body {
  width: 100%;
  display: flex;
  flex-direction: column;
}
.today-box{
  width: 100%;
  display: flex;
  align-items:center;
  flex-direction: column;
  justify-content: space-between;
}
.today {
  font-size: 80rpx;
  opacity: 0.7;
}

.today-date {
  color: #aaa;
  margin: 10rpx;
  font-size: 11pt;
}

.today-count {
  width: 100%;
  margin-top: 50rpx;
}
.type-row{
  height: 85rpx;
  background-color:#fff;
  width: 100%;
  display: flex;
  flex-direction: row-reverse;
  border-bottom:1rpx solid #ddd;
  justify-content: space-between;
}

.type-item{
  position:absolute;
  height:85rpx;
  background-color:lavender;
  width:100%;
  display: flex;
  flex-direction: row;
    align-items: center;
}
.type-item-name{
  margin-left: 15px;
}
.delete-box{
  background-color: #e64340;
  color: #fff;
  height: 100%;
  width: 80px;
  display: flex;
  align-items: center;
  justify-content: center;
}
 .record{
  height: 100rpx;
  margin-top: 50rpx;
  padding: 0 30rpx 0 30rpx;
}
.swiper{
  height: 300rpx;
  width:100%;
}
.swiper image{
  height:100%;
  width:100%;
}
